{
	"displayName": "JimpleLSP",
	"name": "jimplelsp",
	"description": "A language server implementation for Soots Jimple powered by the MagpieBridge framework.",
	"author": "Markus Schmidt",
	"license": "MIT",
	"version": "0.0.4",
	"homepage": "https://github.com/swissiety/JimpleLSP/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/swissiety/JimpleLSP/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/swissiety/JimpleLSP"
	},
	"publisher": "swissiety",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"Soot, Jimple, Language Server, LSP, .jimple"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:jimple",
		"workspaceContains:**/*.apk",
		"workspaceContains:**/*.jar"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "jimple",
				"aliases": [
					"Jimple",
					"jimple"
				],
				"extensions": [
					".Jimple",
					".jimple"
				]
			}
		],
		"configuration": {
			"title": "JimpleLSP",
			"properties": {
				"JimpleLSP.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"JimpleLSP.lspTransport": {
					"scope": "window",
					"type": "string",
					"enum": [
						"stdio",
						"socket"
					],
					"default": "stdio",
					"description": "Specifies the mode of transport used to communicate with the Jimple language server."
				},
				"JimpleLSP.jimpleextraction.sootpath": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "Tells JimpleLSP where it can find the Soot executable to extract Jimple on demand."
				},
				"JimpleLSP.jimpleextraction.androidplatforms": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "Tells Soot where it can find the necessary android.jar to convert an .apk to jimple. Usually found in ANDROID_HOME/platforms"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cp ../target/jimplelsp-0.0.4.jar jimplelsp.jar && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"build": "vsce package"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.4",
		"xmlhttprequest-ts": "^1.0.1"
	},
	"devDependencies": {
		"@angular/common": "^5.0.0",
		"@angular/core": "^5.0.0",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.15.43",
		"rxjs": "^5.5.12",
		"tslint": "^5.15.0",
		"typescript": "^3.4.2",
		"vsce": "^1.83.0",
		"vscode": "^1.1.37",
		"zone.js": "^0.8.29"
	}
}
